@using Thuctapchuyenmon.Models
@{
    ViewBag.Title = "TimKiem";
    Layout = "~/Views/Shared/_layoutshare.cshtml";
}
@foreach (var item in Model)
{
    <div class="col-sm-4">
        <div class="card">
            <div class="card-body">

                <img style="width:300px; height:350px" src="~/Content/Images/@item.Anh" />

                <p style="color:#ed71a3 ; text-align:center"> @item.Name</p>
                <p style="color:#ed71a3;text-align:center">
                    Giá : @item.Gia.000
                    <a href="@Url.Action("ThemvaoGioHang", "GioHang", new {@MaSP=item.ID })">
                        <img src="~/Content/Images/giohang.jpg" />
                    </a>
                </p>
                

            </div>

        </div>
        <div>
            <p style="color:red">
                @ViewBag.ThongBao
            </p>
        </div>

    </div>
}
