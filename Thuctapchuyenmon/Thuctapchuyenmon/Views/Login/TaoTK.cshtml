@using CaptchaMvc.HtmlHelpers
@using CaptchaMvc
@using Thuctapchuyenmon.Models
@model Admin


@{
//Layout = null;
//Layout = "~/Views/Home/Menu.cshtml";
}

<!DOCTYPE html>;

<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <style>
        #login {
            position: fixed;
            padding: 5px;
            left: 0px;
            width: 100%;
            height: 100%;
            cursor: pointer;
            z-index: 99;
        }
        .a{
            text-align:center;
        }
            #login div {
                margin-top: 13%;
                text-align: center;
            }
    </style>
    <title>Tạo Tài Khoản</title>
    <link href="~/Content/css/styles.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/js/all.min.js" crossorigin="anonymous"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="background-color:#ed71a3">
    <div id="login">
        <div class="card-body">
            <img src="~/Content/Img/5.gif" />
        </div>

    </div>
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main >
                        <div class="col-lg-7">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 style="color:#ed71a3" class="text-center font-weight-light my-4">Tạo Tài Khoản</h3></div>
                                <div class="card-body" id="DKtk">

                                    @using (Html.BeginForm())
                                    {


                                        <div class="form-group">

                                            <label style="color:#ed71a3" class="small mb-1" for="inputFirstName">Tên đăng nhập</label>
                                            <input class="form-control py-4" name="UserName" id="inputfirstname" type="text" placeholder="enter username" />

                                        </div>


                                        <div class="form-group">
                                            <label style="color:#ed71a3" class="small mb-1" for="sdt">Địa chỉ</label>
                                            <input class="form-control py-4" name="Address" id="address" type="text" placeholder="Enter Address" />
                                        </div>

                                        <div class="form-group">
                                            <label style="color:#ed71a3" class="small mb-1" for="inputEmailAddress">Gmail</label>
                                            <input class="form-control py-4" name="Email" id="inputEmailAddress" type="text" placeholder="Enter email" />
                                        </div>


                                        <div class="form-group">
                                            <label style="color:#ed71a3" class="small mb-1" for="sdt">Số điện thoại</label>
                                            <input class="form-control py-4" name="Phone" id="sdt" type="text" placeholder="Enter the phone" />
                                        </div>





                                        <div class="form-group">
                                            <label style="color:#ed71a3" class="small mb-1" for="mk1">Mật Khẩu</label>
                                            <input class="form-control py-4" name="PassWord" id="mk1" type="password" placeholder="Enter password" />

                                        </div>

                                        <div class="form-group">
                                            <label style="color:#ed71a3" class="small mb-1" for="mk">Nhập Lại Mật Khẩu</label>
                                            <input class="form-control py-4" id="mk" type="password" placeholder="Confirm password" />
                                        </div>



                                        @Html.MathCaptcha()
                                        <span>
                                            <a style="color:red">
                                                @ViewBag.Thongbao
                                            </a>
                                        </span>
                                        <div class="form-group mt-4 mb-0"><button style="color:white; background:#ed71a3" id="taotk" class="btn btn-primary btn-block">Tạo</button></div>

                                    }
                                    <a href="/Home/Index" style="color:white; Background:#ed71a3" class="btn btn-warning btn-md">
                                        <i class="fa fa-arrow-left"
                                           aria-hidden="true"></i>&nbsp;  Trang chủ
                                    </a>
                                    <div class="card-body form-group " id="FormXN" style="text-align:center">
                                        <div class="card-body row">
                                            <label class="col-2">Mã Xác Nhận</label>
                                            <input class=" col-8 form-control" id="maXN" type="text" placeholder="Nhập Mã Xác Nhận ................." />
                                        </div>
                                        <button id="btnXn" class="btn btn-primary">Xác Nhận </button>
                                        <button id="btnGui" class="btn btn-primary"> Gửi Lại Mã</button>
                                    </div>
                                    <div class="card-footer text-center">
                                        <div class="small"><a style="color:#ed71a3" href="/Login/Dangnhap">Have an account? Go to login</a></div>
                                    </div>

                                </div>
                        </div>
                    </div>
                
</main>
        </div>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/Content/js/scripts.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js" crossorigin="anonymous"></script>
    <script src="/assets/demo/datatables-demo.js"></script>
    <script>
            $('#FormXN').hide();
            $('#login').hide();
            $('#TaoTK').click(function () {
                var mk = $('#mk').val();
                var mk1 = $('#mk1').val();
                var use = $('#inputFirstName').val();
                var adress = $('#inputEmailAddress').val();
                if (mk == mk1 && use.length > 0 && adress.length > 0) {
                    $('#login').show();
                    $.ajax({
                        type: 'post',
                        data: { USE: use, Adress: adress, Pass: mk },
                        url: '/Login/Create',
                        success: function (data) {
                            if (data.status == true) {
                                $('#login').hide();
                                $('#DKtk').hide();
                                $('#FormXN').show();
                            }
                            else {
                                $('#login').hide();
                                alert(data.status);

                            }

                        }
                    });

                }
                else if (mk != mk1) {
                    alert("Mật khẩu mới và mật khẩu nhập vào phải trùng khớp nhau");
                }
                else {
                    alert("Vui Lòng Điền Đầy Đủ Thông Tin");
                }

            });

          



    </script>



</body>
</html>
