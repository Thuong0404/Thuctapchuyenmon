    <title>Chào mừng đến với Big Shope</title>

    <!--theme-style-->

    <link href="~/css/bootstrap.css" rel="stylesheet" />

    <!--//theme-style-->
    <link href="~/css/style.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
