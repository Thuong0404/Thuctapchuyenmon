@model Thuctapchuyenmon.Models.Admin
@{

}
}

<!DOCTYPE html>

<html>

<head>
    <title>Login </title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Content/Images/">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Images/login/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Images/login/onts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Images/login/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Images/login/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Content/Images/login/css/main.css">
    <!--===============================================================================================-->
</head>
<body>
    <div style="background:#ed71a3; border:solid" class="container-login100">
        <div class="wrap-login100">
            <div class="login100-pic js-tilt" data-tilt="" style="will-change: transform; transform: perspective(800px) rotateX(0deg) rotateY(0deg);">
                <img src="~/Content/Images/login/12.png" a alt="IMG">
            </div>
           
            @using (Html.BeginForm("Dangnhap","Login"))
            {
                <span style="color:#ed71a3; font-size:30px" class="login100-form-title">
                    Đăng nhập
                </span>

                <div class="wrap-input100 validate-input alert-validate">
                    <input class="input100" type="text" name="username" required="" placeholder="Username">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-envelope" aria-hidden="true"></i>
                    </span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Mật khẩu không đúng">
                    <input class="input100" type="password" required="" name="pass" placeholder="Password">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </span>
                </div>

                <div class="container-login100-form-btn">
                    <button style="background:#ed71a3" class="login100-form-btn">
                        Đăng nhập
                    </button>
                </div>

                <div class="text-center p-t-12">
                    <span class="txt1">
                        Quên
                    </span>
                    <a style="color:#ed71a3" class="txt2" href="/Login/QuenTK">
                        Username || Password?
                    </a>
                </div>

                <div class="text-center p-t-13">
                    <a style="color:#ed71a3" class="txt2" href="/Login/TaoTK">
                        Đăng kí
                        <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                    </a>
                </div>
            }
        </div>
    </div>





    <!--===============================================================================================-->
    <script src="~/Content/Images/login/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/Images/login/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Content/Images/login/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/Images/login/vendor/select2/select2.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/Images/login/vendor/tilt/tilt.jquery.min.js"></script>
    <script>
        $('.js-tilt').tilt({
            scale: 1.1
        })
    </script>
    <!--===============================================================================================-->
    <script src="~/Content/Images/login/js/main.js"></script>


</body>
</html>
